<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<ImageButton
		android:id="@+id/btnPreviousFull"
		android:layout_height="fill_parent"
		android:layout_width="0px"
		android:layout_weight="1"
		android:background="@drawable/selectable_item_bg"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_action_previous" />
	
	<ImageButton
		android:id="@+id/btnrewindFull"
		android:layout_height="fill_parent"
		android:layout_width="0px"
		android:layout_weight="1"
		android:background="@drawable/selectable_item_bg"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_action_rewind" />
	
	<ImageButton
		android:id="@+id/btnPlay_pauseFull"
		android:layout_height="fill_parent"
		android:layout_width="0px"
		android:layout_weight="1"
		android:background="@drawable/selectable_item_bg"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_action_play"/>

	<ImageButton
		android:id="@+id/btnFastForwardFull"
		android:layout_height="fill_parent"
		android:layout_width="0px"
		android:layout_weight="1"
		android:background="@drawable/selectable_item_bg"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_action_fast_forward" />	
		
	<ImageButton
		android:id="@+id/btnNextFull"
		android:layout_height="fill_parent"
		android:layout_width="0px"
		android:layout_weight="1"
		android:background="@drawable/selectable_item_bg"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_action_next"/>
	
</merge>